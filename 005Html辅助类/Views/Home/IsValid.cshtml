            {
            <span>用户名：</span>@Html.TextBox("UserName") @Html.ValidationMessage("UserName")<br />
                <span>密码：</span>@Html.Password("Password")@Html.ValidationMessage("Password")<<<br />
                <input type="submit" value="提交" />
                    @Html.ValidationSummary()
        }*@


        <form action="~/Home/IsValid" method="post">
            用户名： <input type="text" name="UserName" value="" />@Html.ValidationMessage("UserName")<br />
            密码：<input type="password" name="Password" value="" />@Html.ValidationMessage("Password")<br />
            <input type="submit" value="提交" />
        </form>
    </div>
</body>
</html>
